{
  "openapi": "3.0.0",
  "info": {
    "title": "Restaurant Reservation API",
    "version": "1.0.0",
    "description": "레스토랑 예약 시스템 API"
  },
  "paths": {
    "/restaurants": {
      "get": {
        "summary": "레스토랑 목록 조회",
        "responses": {
          "200": {
            "description": "레스토랑 목록",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string"
                      },
                      "name": {
                        "type": "string",
                        "description": "레스토랑 이름"
                      },
                      "cuisine": {
                        "type": "string",
                        "description": "음식 종류",
                        "enum": ["한식", "중식", "일식", "양식", "이탈리안", "프렌치", "퓨전"]
                      },
                      "location": {
                        "type": "object",
                        "properties": {
                          "address": {
                            "type": "string"
                          },
                          "district": {
                            "type": "string"
                          },
                          "coordinates": {
                            "type": "object",
                            "properties": {
                              "latitude": {
                                "type": "number"
                              },
                              "longitude": {
                                "type": "number"
                              }
                            }
                          }
                        }
                      },
                      "rating": {
                        "type": "number",
                        "format": "float"
                      },
                      "priceRange": {
                        "type": "string",
                        "enum": ["$", "$$", "$$$", "$$$$"]
                      },
                      "openingHours": {
                        "type": "object",
                        "properties": {
                          "monday": {
                            "type": "string"
                          },
                          "tuesday": {
                            "type": "string"
                          },
                          "wednesday": {
                            "type": "string"
                          },
                          "thursday": {
                            "type": "string"
                          },
                          "friday": {
                            "type": "string"
                          },
                          "saturday": {
                            "type": "string"
                          },
                          "sunday": {
                            "type": "string"
                          }
                        }
                      },
                      "amenities": {
                        "type": "array",
                        "items": {
                          "type": "string"
                        },
                        "description": "편의시설"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/reservations": {
      "post": {
        "summary": "예약 생성",
        "responses": {
          "201": {
            "description": "예약 성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "reservationId": {
                      "type": "string"
                    },
                    "restaurantId": {
                      "type": "string"
                    },
                    "restaurantName": {
                      "type": "string"
                    },
                    "customer": {
                      "type": "object",
                      "properties": {
                        "name": {
                          "type": "string"
                        },
                        "phone": {
                          "type": "string"
                        },
                        "email": {
                          "type": "string"
                        }
                      }
                    },
                    "partySize": {
                      "type": "integer",
                      "description": "인원 수"
                    },
                    "reservationDate": {
                      "type": "string",
                      "format": "date"
                    },
                    "reservationTime": {
                      "type": "string",
                      "format": "time"
                    },
                    "specialRequests": {
                      "type": "string",
                      "description": "특별 요청사항"
                    },
                    "status": {
                      "type": "string",
                      "enum": ["confirmed", "pending", "cancelled"]
                    },
                    "confirmationCode": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/restaurants/{id}/menu": {
      "get": {
        "summary": "레스토랑 메뉴 조회",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "메뉴 목록",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "restaurantId": {
                      "type": "string"
                    },
                    "categories": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "categoryName": {
                            "type": "string"
                          },
                          "items": {
                            "type": "array",
                            "items": {
                              "type": "object",
                              "properties": {
                                "id": {
                                  "type": "string"
                                },
                                "name": {
                                  "type": "string"
                                },
                                "description": {
                                  "type": "string"
                                },
                                "price": {
                                  "type": "integer"
                                },
                                "isSpicy": {
                                  "type": "boolean"
                                },
                                "isVegetarian": {
                                  "type": "boolean"
                                },
                                "allergens": {
                                  "type": "array",
                                  "items": {
                                    "type": "string"
                                  }
                                }
                              }
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}